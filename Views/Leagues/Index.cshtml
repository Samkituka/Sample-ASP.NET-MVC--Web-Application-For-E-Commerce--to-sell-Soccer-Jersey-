@model IEnumerable<League>

@{
    ViewData["Title"] = "List of Leagues";
}

<div class="row">
    <div class="col-md-9 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=> model.Logo)</th>
                    <th>@Html.DisplayNameFor(model=> model.Name)</th>
                    <th>@Html.DisplayNameFor(model=> model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model=>item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model =>item.Description)
                        </td>
                        <td class="d-flex">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit </a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"> </i> Details </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div style="position: fixed; right:25px; bottom: 25px;" class="text-white">
    <a asp-controller="Leagues" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

